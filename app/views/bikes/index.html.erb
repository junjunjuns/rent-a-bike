<p id="notice"><%= notice %></p>
  
<h1>Listing Bikes</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Color</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.manufacturer %></td>
        <td><%= bike.color %></td>
        <td><%= bike.price %></td>
        <td><%= bike.description %></td>
        <td><%= bike.image %></td>
        <td><%= link_to 'Show', bike %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
<%= link_to 'New Bike', new_bike_path %>
<% end %>