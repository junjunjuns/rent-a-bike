<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Bike</th>
      <th>Feedback</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.profile_id %></td>
        <td><%= link_to "#{review.bike_id}", "/bikes/#{review.bike_id}" %></td>
        <td><%= review.feedback %></td>
        <td><%= review.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
