<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Bike</th>
      <th>Feedback</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <% @profile = Profile.find(review.profile_id) %>
        <td><%= @profile.fname + " " + @profile.lname %></td>
        <% @bike = Bike.find(review.bike_id) %>
        <td><%= @bike.name %></td>
        <td><%= review.feedback %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Show', "/bikes/#{review.bike_id}/reviews/#{review.id}" %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', "bikes/#{review.bike_id}/reviews/#{review.id}/edit" %></td>
          <td><%= link_to 'Destroy', "bikes/#{review.bike_id}/reviews/#{review.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% @reviews.each do |review| %>
<%= link_to 'New Review', "/bikes/#{review.bike_id}/reviews/new" %>
<% end %>