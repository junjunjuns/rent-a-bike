<p id="notice"><%= notice %></p>

<h1>Reviews of <%= @bike.name %></h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Bike</th>
      <th>Feedback</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.profile_id %></td>
        <td><%= @bike.name %></td>
        <td><%= review.feedback %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Show', bike_review_path(@bike, review) %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_bike_review_path(@bike, review) %></td>
          <td><%= link_to 'Destroy', bike_review_path(@bike, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_bike_review_path(@bike) %>
<%= link_to 'Back', @bike %>