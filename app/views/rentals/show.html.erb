<h1>Rental made by <%= @profile.fname + " " + @profile.lname %></h1>

<p>
  <% @bike = Bike.find(@rental.bike_id) %>
  <%= image_tag(@bike.image.url(:preview)) %> <br>
  <strong>Bike:</strong>
  <%= @bike.name %>
</p>
  
<p>
  <strong>Start date:</strong>
  <%= @rental.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @rental.end_date %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @rental.cost %>
</p>

<p>
  <strong>Description:</strong>
  <%= @rental.description %>
</p>

