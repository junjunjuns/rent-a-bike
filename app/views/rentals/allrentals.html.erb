<p id="notice"><%= notice %></p>

<h1>Listing Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Bike</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Cost</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <% @profile = Profile.find(rental.profile_id) %>
        <td><%= @profile.fname + " " + @profile.lname %></td>
        <% @bike = Bike.find(rental.bike_id) %>
        <td><%= @bike.name %></td>
        <td><%= rental.start_date %></td>
        <td><%= rental.end_date %></td>
        <td><%= rental.cost %></td>
        <td><%= rental.description %></td>
        <td><%= link_to 'Show', "/profiles/#{rental.profile_id}/rentals/#{rental.id}" %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', "/profiles/#{rental.profile_id}/rentals/#{rental.id}/edit" %></td>
          <td><%= link_to 'Destroy', "/profiles/#{rental.profile_id}/rentals/#{rental.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% @rentals.each do |rental| %>
<%= link_to 'New Rental', "/profiles/#{rental.profile_id}/rentals/new" %>
<% end %>