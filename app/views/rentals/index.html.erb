<p id="notice"><%= notice %></p>

<h1>Rentals made by <%= @profile.fname + " " + @profile.lname %></h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Bike</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Cost</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%=  @profile.fname + " " + @profile.lname %></td>
        <% @bike = Bike.find(rental.bike_id) %>
        <td><%= @bike.name %></td>
        <td><%= rental.start_date %></td>
        <td><%= rental.end_date %></td>
        <td><%= rental.cost %></td>
        <td><%= rental.description %></td>
        <td><%= link_to 'Show', profile_rental_path(@profile, rental) %></td>
        <td><%= link_to 'Edit', edit_profile_rental_path(@profile, rental) %></td>
        <td><%= link_to 'Destroy', profile_rental_path(@profile, rental), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rental', new_profile_rental_path(@profile) %>
<%= link_to 'Back to Bikes', "/bikes/" %>
